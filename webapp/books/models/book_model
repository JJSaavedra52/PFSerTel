from db.db import db

class Product(db.Model):
    __tablename__ = 'products'

    code = db.Column(db.String, primary_key=True)
    userid = db.Column(db.int, db.ForeignKey('users.id'), nullable=False)
    title = db.Column(db.String, nullable=False)
    author = db.Column(db.String, nullable=True)
    year = db.Column(db.int, nullable=True)
    synopsis = db.Column(db.String, nullable=True)
    editorial = db.Column(db.String, nullable=True)
    


    def __init__(self, ref, name, price, description):
        self.code = ref
        self.userid = name
        self.title = name
        self.author = price
        self.year = description
        self.synopsis = description
        self.editorial = description